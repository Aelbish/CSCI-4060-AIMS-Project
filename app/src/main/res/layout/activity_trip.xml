<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UI.Activities.TripActivity"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Trip Summary"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/trip_heading_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TripId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Trip id"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_start_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/my_button"
            android:clickable="true"
            android:paddingLeft="5dp"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/trip_info_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_heading_relative_layout">

        <RelativeLayout
            android:id="@+id/trip_info_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <!--            Driver code-->
            <TextView
                android:id="@+id/DriverCodeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DRIVER CODE:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DriverCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DriverCodeTitle"
                android:text="123"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View
                style="@style/Divider"
                android:layout_below="@id/DriverCode" />

            <!--            End of driver code-->


            <!--            driver name-->
            <TextView
                android:id="@+id/DriverNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DriverCode"
                android:layout_marginTop="20dp"
                android:text="DRIVER NAME:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DriverNameTitle"
                android:text="John Doe"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View
                style="@style/Divider"
                android:layout_below="@id/DriverName" />

            <!--            End of driver name-->


            <!--            Truck description-->
            <TextView
                android:id="@+id/TruckDescTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DriverName"
                android:layout_marginTop="20dp"
                android:text="TRUCK DESCRIPTION:"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/TruckDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TruckDescTitle"
                android:text="This is truck description"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/TruckDesc"/>

            <!--End of truck description-->


            <!--            Trailer Description -->

            <TextView
                android:id="@+id/TrailerDescTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TruckDesc"
                android:layout_marginTop="20dp"
                android:text="TRAILER DESCRIPTION:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TrailerDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TrailerDescTitle"
                android:text="This is trailer description"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/TrailerDesc"/>

            <!--            End of trailer description-->


            <!--            Trip name-->

            <TextView
                android:id="@+id/TripNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TrailerDesc"
                android:layout_marginTop="20dp"
                android:text="TRIP NAME:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TripName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TripNameTitle"
                android:text="This is trip name"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/TripName"/>

            <!--            End of trip name-->


            <!--            Trip date-->

            <TextView
                android:id="@+id/TripDateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TripName"
                android:layout_marginTop="20dp"
                android:text="TRIP DATE:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TripDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TripDateTitle"
                android:text="2020/12/12"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/TripDate"/>

            <!--            End of trip date-->


            <!--            Trip destination-->

            <TextView
                android:id="@+id/DestinationNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TripDate"
                android:layout_marginTop="20dp"
                android:text="DESTINATION NAME:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DestinationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DestinationNameTitle"
                android:text="This is destination name"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/DestinationName"/>

            <!--            End of trip destination-->


            <!--            Address 1 -->

            <TextView
                android:id="@+id/Address1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DestinationName"
                android:layout_marginTop="20dp"
                android:text="ADDRESS 1:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Address1Title"
                android:text="This is address 1"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/Address1"/>

            <!--            End of address 1-->


            <!--            City-->

            <TextView
                android:id="@+id/CityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Address1"
                android:layout_marginTop="20dp"
                android:text="CITY:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/CityTitle"
                android:text="This is city"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/City"/>

            <!--            End of city-->

            <!--            Postal code-->

            <TextView
                android:id="@+id/PostalCodeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/City"
                android:layout_marginTop="20dp"
                android:text="POSTAL CODE:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/PostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/PostalCodeTitle"
                android:text="74456"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/PostalCode"/>

            <!--            End of postal code-->


            <!--            Product description-->

            <TextView
                android:id="@+id/ProductDescTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/PostalCode"
                android:layout_marginTop="20dp"
                android:text="PRODUCT DESCRIPTION:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ProductDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProductDescTitle"
                android:text="This is product description"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/ProductDesc"/>
            <!--            End of product description-->


            <!--            Request quantity-->

            <TextView
                android:id="@+id/RequestedQtyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProductDesc"
                android:layout_marginTop="20dp"
                android:text="REQUEST QUANTITY:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/RequestedQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RequestedQtyTitle"
                android:text="21"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/RequestedQty"/>

            <!--            End of request quantity-->

            <!--            UOM-->

            <TextView
                android:id="@+id/UOMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RequestedQty"
                android:layout_marginTop="20dp"
                android:text="UOM:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/UOM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/UOMTitle"
                android:text="This is UOM"
                android:textColor="#515151"
                android:textSize="15sp" />

            <View style="@style/Divider"
                android:layout_below="@id/UOM"/>


            <!--            End of UOM-->

            <!--            Fill-->

            <TextView
                android:id="@+id/FillTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/UOM"
                android:layout_marginTop="20dp"
                android:text="FILL:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/FillTitle"
                android:text="This is fill"
                android:textColor="#515151"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"/>

            <View style="@style/Divider"
                android:layout_below="@id/Fill"/>

            <!--            End of fill-->


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>