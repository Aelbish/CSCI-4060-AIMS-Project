<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Activities.DriverInputSourceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/textView"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Product Type" />
            <!--            <EditText-->
            <!--                android:id="@+id/editTextProductType"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:hint="Type product type"-->
            <!--                android:inputType="textPersonName"-->
            <!--                />-->

            <Spinner
                android:id="@+id/spinnerProductType"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView5"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Date"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select start date"
                android:inputType="none"
                android:focusable="false"/>
            <TextView
                android:id="@+id/textView7"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Time"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextStartTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select start time"
                android:inputType="none"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView8"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Date"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextEndDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select end date"
                android:inputType="none"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView10"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Time"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextEndTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select end time"
                android:inputType="none"
                android:focusable="false"/>

            <TextView
                android:id="@+id/textView11"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Beginning Site Container Reading"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextBeginSiteContainerReading"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/textView12"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ending Site Container Reading"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextEndSiteContainerReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/textView13"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Beginning Trailer Meter Reading"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextStartMeterReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/textView19"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ending Trailer Meter Reading"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextEndMeterReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/textView20"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Delivered Gross Quantity"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextDeliveredGrossQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/textView21"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Delivered Net Quantity"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextDeliveredNetQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/textView22"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Delivery Ticket Number"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextDeliveryTicketNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter delivery ticket number"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView25"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Site Barcode"
                />

            <EditText
                android:id="@+id/editTextBarcode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Scan Barcode"
                android:inputType="none"
                android:focusable="false"
                />

            <Button
                android:id="@+id/buttonScan"
                android:drawableRight="@drawable/ic_baseline_camera_alt_24"
                android:text="Scan"
                android:theme="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textView24"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Customer E-Signature"
                />

            <ImageView
                android:background="@drawable/image_view_border"
                android:id ="@+id/imageSignature"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"/>

            <Button
                android:id="@+id/buttonSignature"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:text="Sign"
                android:theme="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/textView23"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Delivery Comments"
                />

            <EditText
                android:id="@+id/editTextDeliveryComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Enter delivery comments or remarks if any"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/buttonFormSubmit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:onClick="clickFunction"
                android:text="Submit"
                android:layout_margin="24dp"
                android:theme="@style/AppTheme" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
