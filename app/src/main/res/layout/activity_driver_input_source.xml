<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Activities.DriverInputSourceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Product Type" />
            <EditText
                android:id="@+id/editTextProductType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Type product type"
                android:inputType="textPersonName"
                />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Date"
                />
            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="MM/DD/YYYY"
                android:inputType="date"
                />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Time"
                />

            <EditText
                android:id="@+id/editTextStartTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="HH:MM"
                android:inputType="time"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Date"
                />

            <EditText
                android:id="@+id/editTextEndDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="MM/DD/YYYY"
                android:inputType="date"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Time"
                />

            <EditText
                android:id="@+id/editTextEndTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="HH:MM"
                android:inputType="time"
                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Trailer Gross Quantity"
                />

            <EditText
                android:id="@+id/editTextTrailerGrossQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Trailer Net Quantity"
                />

            <EditText
                android:id="@+id/editTextTrailerNetQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Beginning Trailer Meter Reading"
                />

            <EditText
                android:id="@+id/editTextStartMeterReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ending Trailer Meter Reading"
                />

            <EditText
                android:id="@+id/editTextEndMeterReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pickup Gross Quantity"
                />

            <EditText
                android:id="@+id/editTextPickupGrossQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pickup Net Quantity"
                />

            <EditText
                android:id="@+id/editTextPickupNetQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Bill of Lading Number"
                />

            <EditText
                android:id="@+id/editTextBOLNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter BOL Number"
                android:inputType="number"
                />

            <Button
                android:id="@+id/buttonFormSubmit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:onClick="clickFunction"
                android:text="Submit"
                android:theme="@style/AppTheme" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
