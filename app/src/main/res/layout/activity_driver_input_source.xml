<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Activities.DriverInputSourceActivity"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Product Type"
                android:textSize="22sp"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/spinnerProductType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView5"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Date"
                android:gravity="bottom"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select start date"
                android:inputType="none"
                android:focusable="false"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView7"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Start Time"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextStartTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select start time"
                android:inputType="none"
                android:focusable="false"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView8"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Date"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextEndDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select end date"
                android:inputType="none"
                android:focusable="false"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView10"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="End Time"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextEndTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Select end time"
                android:inputType="none"
                android:focusable="false"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView11"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Trailer Gross Quantity"
                android:textSize="22sp"
                android:gravity="bottom"
                />

            <EditText
                android:id="@+id/editTextTrailerGrossQuantity"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/textView12"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Trailer Net Quantity"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextTrailerNetQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/textView13"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Beginning Trailer Meter Reading"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextStartMeterReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/textView19"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ending Trailer Meter Reading"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextEndMeterReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/textView20"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pickup Gross Quantity"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextPickupGrossQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:background="@drawable/textfield"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/textView21"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pickup Net Quantity"
                android:gravity="bottom"
                android:textSize="22sp"
                />

            <EditText
                android:id="@+id/editTextPickupNetQuantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter in gal"
                android:inputType="numberDecimal"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/textView23"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Bill of Lading Picture"
                android:textSize="22sp"
                />

            <ImageView
                android:background="@drawable/image_view_border"
                android:id ="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/buttonTakePicture"
                android:drawableRight="@drawable/ic_baseline_camera_alt_24"
                android:text="Capture"
                android:textSize="22sp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:theme="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="18dp"
                />

            <TextView
                android:id="@+id/textView22"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Bill of Lading Number"
                android:textSize="22sp"

                />

            <EditText
                android:id="@+id/editTextBOLNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter BOL Number"
                android:inputType="number"
                android:background="@drawable/textfield"
                android:padding="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <Button
                android:id="@+id/btnSubmitInputSiteData"
                android:layout_margin="24dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:textSize="22sp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:theme="@style/AppTheme" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

