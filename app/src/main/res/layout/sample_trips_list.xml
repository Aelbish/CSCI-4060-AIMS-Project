<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DADADA"
        android:padding="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtTripId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip id"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/txtTripName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TripName"
                android:layout_below="@id/txtTripId"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTripSeq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/txtTripId"
                android:layout_marginRight="-256dp"
                android:text="SeqNum" />

            <TextView
                android:id="@+id/txtTripWaypoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTripId"
                android:layout_alignRight="@+id/txtTripName"
                android:layout_marginTop="1dp"
                android:layout_marginRight="-239dp"
                android:text="Waypoint" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:paddingLeft="5dp"
                android:background="#FFAE1A"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_alignParentStart="true"
                android:clickable="true"/>

        </RelativeLayout>





    </LinearLayout>



</RelativeLayout>